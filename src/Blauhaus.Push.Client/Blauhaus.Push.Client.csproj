<Project Sdk="MsBuild.SDK.Extras/2.1.2">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;Xamarin.iOS10;MonoAndroid10.0;uap10.0.18362</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild> 
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="iOS\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="Android\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

<ItemGroup>
    <PackageReference Include="Blauhaus.Common.Utils" Version="1.8.7" />
    <PackageReference Include="Blauhaus.DeviceServices" Version="0.8.3" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
    <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.2.11" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
    <PackageReference Include="Xamarin.Forms" Version="4.8.0.1687" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Blauhaus.Push.Abstractions\Blauhaus.Push.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <PackageReference Include="Xamarin.Azure.NotificationHubs.Android">
      <Version>1.1.3</Version>
    </PackageReference>
    <PackageReference Include="Xamarin.Firebase.Messaging">
      <Version>120.2.4</Version>
    </PackageReference>
    <PackageReference Include="Xamarin.GooglePlayServices.Base">
      <Version>117.2.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <PackageReference Include="Xamarin.Azure.NotificationHubs.iOS">
      <Version>3.1.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
    <PackageReference Include="WindowsAzure.Messaging.Managed">
      <Version>0.1.7.9</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform">
      <Version>6.2.10</Version>
    </PackageReference>
  </ItemGroup>

</Project>
