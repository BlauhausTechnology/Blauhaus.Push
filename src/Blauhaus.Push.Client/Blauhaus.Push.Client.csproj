<Project Sdk="MsBuild.SDK.Extras/2.0.54">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;Xamarin.iOS10;MonoAndroid10.0;uap10.0.19041</TargetFrameworks>
		<LangVersion>8</LangVersion>
		<Nullable>enable</Nullable>
		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="iOS\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="Common\**\*.cs" />
    <Compile Include="Android\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

<ItemGroup>
    <PackageReference Include="Blauhaus.Common.Utils" Version="1.9.8" />
    <PackageReference Include="Blauhaus.DeviceServices" Version="0.8.8" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Blauhaus.Push.Abstractions\Blauhaus.Push.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <PackageReference Include="Xamarin.Azure.NotificationHubs.Android">
      <Version>1.1.4.1</Version>
    </PackageReference>
	<!--This needs to be included in the android app project -->
    <!--<PackageReference Include="Xamarin.Firebase.Messaging">
      <Version>121.0.1</Version>
    </PackageReference>-->
    <PackageReference Include="Xamarin.GooglePlayServices.Base">
      <Version>117.6.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <PackageReference Include="Xamarin.Azure.NotificationHubs.iOS">
      <Version>3.1.1</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
    <PackageReference Include="WindowsAzure.Messaging.Managed">
      <Version>0.1.7.9</Version>
    </PackageReference>
  </ItemGroup>

	<ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
		<PackageReference Include="WindowsAzure.Messaging.Managed">
			<Version>0.1.7.9</Version>
		</PackageReference>
	</ItemGroup>

</Project>
